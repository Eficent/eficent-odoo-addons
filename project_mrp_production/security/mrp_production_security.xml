<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Project Managers: can view and edit only production orders associated to the analytic accounts they manage -->
        <record model="ir.rule" id="mrp_production_project_manager_rule_write">
            <field name="name">Production Order: project manager: EDIT only managed production orders</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="domain_force">[('analytic_account_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</openerp>
