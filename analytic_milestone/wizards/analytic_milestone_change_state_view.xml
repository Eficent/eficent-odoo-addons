<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="analytic_milestone_change_state_form" model="ir.ui.view">
        <field name="name">analytic.milestone.change.state.form</field>
        <field name="model">analytic.milestone.change.state</field>
        <field name="arch" type="xml">
            <form string="Change status of Milestones">
                <group>
                    <field name="state"/>
                </group>
                <footer>
                    <button string="Execute"
                            name="change_state_confirm"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_analytic_milestone_change_state_form" model="ir.actions.act_window">
        <field name="name">Change status</field>
        <field name="res_model">analytic.milestone.change.state</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="analytic_milestone_change_state_form"/>
        <field name="target">new</field>
    </record>

    <act_window name="Change status"
                res_model="analytic.milestone.change.state"
                src_model="analytic.milestone"
                view_mode="form"
                target="new"
                multi="True"
                key2="client_action_multi"
                id="action_analytic_milestone_change_state_form"/>

</odoo>
